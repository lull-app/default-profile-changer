{
    "scripts": {
        "build": "rollup -c && rollup -c server.rollup.config.mjs",
        "build:plugin": "rollup -c",
        "build:server": "rollup -c server.rollup.config.mjs",
        "watch": "rollup -c -w --watch.onEnd=\"streamdeck restart com.trueferret.default-profile-changer\"",
        "start-server": "node dist/server.js",
        "dev": "concurrently \"npm run watch\" \"npm run start-server\""
    },
    "type": "module",
    "devDependencies": {
        "@elgato/cli": "^1.1.1",
        "@rollup/plugin-commonjs": "^28.0.0",
        "@rollup/plugin-node-resolve": "^15.2.2",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.0",
        "@tsconfig/node20": "^20.1.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "~20.15.0",
        "rollup": "^4.0.2",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@elgato/streamdeck": "^1.0.0",
        "cors": "^2.8.5",
        "express": "^4.21.2"
    }
}
